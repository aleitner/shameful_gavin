{
  "manifest_version": 2,

  "name": "Shameful Gavin",
  "description": "You should be ashamed of yourself",
  "version": "1.0.3",

  "browser_action": {
    "default_icon": {
      "19": "images/19.png",
      "38": "images/38.png"
    },
    "default_title": "Shame on you!"
  },
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "options_page": "options.html",
  "background":{
    "scripts": ["background.js"]
  }
}
